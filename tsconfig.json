{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "exclude": [
    "dist",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts",
    ".eslintrc.js"
  ]
}
